@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h4>Add a new restaurant</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)<br>
  @Html.TextBoxFor(model => model.Name, new {@class ="", required="required"})
<br>
  @Html.LabelFor(model => model.Description)<br>
  @Html.TextBoxFor(model => model.Description)
<br>
  @Html.LabelFor(model => model.Cuisine)<br>
  @Html.DropDownList("CuisineId")
<br>
  <input type="submit" value="Add new restaurant" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all restaurants", "Index")</p>